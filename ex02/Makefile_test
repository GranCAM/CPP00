# Makefile for testing timestamp functionality

# Test the timestamp format example
test_format:
	c++ -Wall -Wextra -Werror -std=c++98 timestamp_example.cpp -o timestamp_test
	./timestamp_test
	rm -f timestamp_test

# Test your Account class with timestamp
test_account:
	c++ -Wall -Wextra -Werror -std=c++98 Account.cpp test_timestamp.cpp -o account_test
	./account_test
	rm -f account_test

# Original program
original:
	c++ -Wall -Wextra -Werror -std=c++98 Account.cpp tests.cpp -o account
	./account

clean:
	rm -f *.o timestamp_test account_test account

.PHONY: test_format test_account original clean
